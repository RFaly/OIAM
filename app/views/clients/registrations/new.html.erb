<!-- appel css -->
<% content_for :head_style do %>
<link rel="stylesheet" href="/css/inscription_r.css" />
<% end %>
<!-- body html  -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<center><%= render "clients/shared/error_messages", resource: resource %></center>

<div class="inscription-r">
  <div class="travel-parcours" id="elementtoScrollToID">
    <div class="travel-image">
      <div class="circle color-bg">
        1
      </div>
      <div class="line ir-l1"></div>
      <div class="circle ir-c1">
        2
      </div>
      <div class="line ir-l2"></div>
      <div class="circle ir-c2">
        3
      </div>
      <div class="line ir-l3"></div>
      <div class="circle ir-c3">
        4
      </div>
    </div>
    <ol>
      <li>Détails Entreprise</li>
      <li>Détails Recruteur</li>
      <li>Création de compte</li>
      <li>Signature du contrat</li>
    </ol>
  </div>

  <div class="details-r dr-1 open">
    <input autofocus="autofocus" class="dr-item" required="required" autocomplete="entreprise_name" type="text"
      name="entreprise_name" id="entreprise_name" placeholder="Entreprise" />
    <span class="input-error" id="entreprise-name-error"></span>

    <input autofocus="autofocus" class="dr-item" required="required" autocomplete="entreprise_adresse" type="text"
      name="entreprise_adresse" id="entreprise_adresse" placeholder="Adresse" />
    <span class="input-error" id="entreprise-adress-error"></span><br>

    <input autofocus="autofocus" class="dr-item dr-item-postal" required="required" autocomplete="postal_code"
      type="text" name="postal_code" id="postal_code" placeholder="Code Postal" />
    <input autofocus="autofocus" class="dr-item dr-item-fad" required="required" autocomplete="city" type="text"
      name="city" id="city" placeholder="Ville" readonly />
    <span class="input-error" id="entreprise-postal-error"></span>

    <input autofocus="autofocus" class="dr-item" required="required" autocomplete="entreprise_siret" type="text"
      name="entreprise_siret" id="entreprise_siret" placeholder="Numéro de siret" maxlength="20" />
    <span class="input-error" id="entreprise-siret-error"></span>

    <input autofocus="autofocus" class="dr-item" required="required" autocomplete="entreprise_site" type="text"
      name="entreprise_site" id="entreprise_site" placeholder="Site Internet" />
    <span class="input-error" id="entreprise-site-error"></span>
    <input autofocus="autofocus" class="dr-item" required="required" autocomplete="code_naf" type="text" name="code_naf"
      id="code_naf" placeholder="Code NAF" />
    <span class="input-error" id="code-naf-error"></span>
    <ul class="code-naf-list" id="code-naf-list"></ul>

    <textarea required="required" class="dr-item dr-textarea" autocomplete="entreprise_description" type="text"
      name="entreprise_description" id="entreprise_description" autofocus="autofocus"
      placeholder="Description de votre activité" readonly></textarea>

    <div class="details-btn dr-btn1">
      SUIVANT
    </div>
    <span class="input-error" id="submit-error"></span>
  </div>

  <div class="details-r dr-2">
    <%= f.text_field :last_name, autofocus: true, class:"dr-item",id:'recruteur-last-name', autocomplete: "last_name", required: true, placeholder: 'Nom' %>
    <span class="input-error" id="recruteur-last-name-error"></span>
    <%= f.text_field :first_name, autofocus: true, class:"dr-item",id:'recruteur-first-name', autocomplete: "first_name", required: true, placeholder: 'Prénom' %>
    <span class="input-error" id="recruteur-first-name-error"></span>
    <%= f.text_field :fonction,autofocus: true,class:"dr-item",id:'recruteur-fonction' , autocomplete: "fonction", required: true, placeholder: 'Fonction' %>
    <span class="input-error" id="recruteur-fonction-error"></span>
    <%= f.email_field :mail, autofocus: true, class:"dr-item",id:'recruteur-mail' , autocomplete: "mail", required: true, placeholder: 'Mail' %>
    <span class="input-error" id="recruteur-mail-error"></span>
    <div class="phone-number-add">
      <%= f.text_field :telephone, autofocus: true, class:"dr-item",id:'recruteur-phone' ,autocomplete: "telephone", required: true,placeholder: 'Téléphone' , maxlength:"16"%>
    </div>
    <span class="input-error" id="recruteur-phone-error"></span>

    <div class="details-btn dr-btn2">
      SUIVANT
    </div>
    <span class="input-error" id="submit-error2"></span>
  </div>

  <div class="details-r dr-3">
    <%= f.email_field :email, autofocus: true, class:"dr-item",id:'email-r', autocomplete: "email", required: true, placeholder: 'Identifiant' %>
    <span class="input-error" id="email-r-error"></span>
    <!-- <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %> -->
    <em>(Adresse email)</em>
    <br />
    <%= f.password_field :password, class:"dr-item",id:'password-r', autocomplete: "new-password", required: true, placeholder: 'Mot de passe' %>
    <span class="input-error" id="password-r-error"></span>
    <%= f.password_field :password_confirmation, class:"dr-item",id:'cpass-r', autocomplete: "new-password", required: true, placeholder: 'Confirmation du mot de passe' %>
    <span class="input-error" id="cpass-r-error"></span>
    <div class="details-btn dr-btn3">
      SUIVANT
    </div>
    <span class="input-error" id="submit-error3"></span>
  </div>

  <div class="details-r-condition">
    <p id="det-p">
      Vous vous apprêtez à devenir client de One In A Million. <br />
      Nous vous remercions de lire attentivement nos conditions générales de vente.
    </p>
    <div class="condition-content">
      <%= render "condition_general" %>
    </div>
    <div class="condition-check">
      <label id="condition-check">
        En cochant cette case, je reconnais avoir pris connaissance d’annulation et de responsabilités (telles
        qu’indiquées dans le programme).
        <input type="checkbox" value="1" required="required" id="offre_job_contrat_cdi" />
        <span class="checkmark"></span>
      </label>
    </div>
    <div class="dr-btn">
      <%= f.submit "VALIDER", class:'dr-btn-btn' %> <% end %>
    </div>
  </div>
</div>

<!-- javascript city code  -->
