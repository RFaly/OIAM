<!-- body html  -->
<div class="client-column">
	<div class="client-menu-left"><%= render "admin_candidats/left_menu" %></div>
	<div class="cp-box">
		<div class="fcp-box">
			<div class="chat-info">
				<div class="img">
					<a href="<%= cbp_promise_no_validate_path(@contact.cadre.cadre_info.id) %>">
						<img src="<%= @contact.cadre.cadre_info.image %>" alt="avatar">
					</a>
					<% if @contact.cadre.is_online? %>
					<span class="dot-online"></span>
					<% end %>
				</div>
				<div class="desc">
					<h1 class="name"><%= @contact.cadre.cadre_info.first_name.capitalize %> <%= @contact.cadre.cadre_info.last_name.capitalize %></h1>
					<p class="online">
						<% if @contact.cadre.is_online? %>
							<small>En ligne</small>
						<% else %>
	            <small>Connect√©(e) il y a <%= time_ago_in_words(@contact.cadre.online_time) %></small>
						<% end %>
					</p>
				</div>
	</div>

	<div class="chat-body" id="somaiso">
		<% @messages.each do |message| %>
		<% unless message.is_admin %>
		<div class="hr-msg">
			<div class="hr-image">
				<img src="<%= @contact.cadre.cadre_info.image %>" alt="avatar">
			</div>
			<div class="hr-mg">
				<p><%= message.content %></p>
			</div>
		</div>
		<% else %>
		<div class="m-msg">
			<p><%= message.content %></p>
		</div>
		<% end %>
		<div class="clear"></div>
		<% end %>
	</div>

	<%= form_tag(candidats_post_message_path, remote: :true, id: 'mandona') do %>
	<div class="sd">
			<input type="hidden" name="id_contact" value="<%= @contact.id%>">
			<input type="hidden" name="id_cadre" value="<%= @cadre.id %>">
			<!-- <div id="emojie">
				<i class="far fa-smile"></i>
			</div> -->
			<input placeholder="Ecrire un message..." class="ms-in" name="message_admin_cadre[content]" id="message_admin_cadre_content" autocomplete="off"></input>
			<button type="submit">
				<img src="/image/send.png" alt="send" class="ms-im"/>
			</button>
	</div>

	<div class="emoji-dashboard" style="display: none;">
				<ul class="emojis">
					<li class="emoji" data-clipboard-text="--1"><i class="em em---1"></i></li>
					<li class="emoji" data-clipboard-text="-1"><i class="em em--1"></i></li>
					<li class="emoji" data-clipboard-text="100"><i class="em em-100"></i></li>
					<li class="emoji" data-clipboard-text="anguished"><i class="em em-anguished" aria-role="presentation" aria-label="ANGUISHED FACE"></i></li>
