<% content_for :head_style do %>
  <link rel="stylesheet" href="/css/fc_post.css" />
<% end %>
<!-- body html  -->
<div class="client-column">
  <div class="client-menu-left"><%= render "recruteurs/left_link_bar" %></div>
  <div class="cp-box">
    <div class="fcp-box">
      <h5 class="title title-our">NOTRE SELECTION</h5>
      <div class="fc-item">
        <% if @cadre_infos.empty?  %>
          <center>Aucun candidat ne correspond à votre offre pour le moment.</center>
        <% else %>

        <div class="fc-item-all">
          <% @cadre_infos.each do |cadre_info| %>
          <%= link_to show_search_candidate_path(cadre_info.cadre.id, offre_id: @offre.id), method: :get do %>
          <div class="list-candidat">
            <div class="fci-image">
              <div class="c" style="background: url(<%= cadre_info.image%>) center no-repeat; background-size: cover"></div>
            </div>
            <div class="fci-icon">
              <img class="alreadyFavorite" src="/image/Vector-24.png" alt="logo oiam favorie" />
            </div>
            <div class="fci-infos">
              <p class="name"><%= cadre_info.first_name %> <%= cadre_info.last_name[0].upcase %>.</p>
              <p class="compatibilite">Compatibilité : <span>60%</span></p>
              <p class="score">Score OIAM : <span>1700</span></p>
              <p class="poste">Type de poste : 
                <% if cadre_info.metier.nil? %>
                  Manager marketing
                <% else %>
                  <%= cadre_info.metier.name %>
                <% end %>
              </p>
            </div>
          </div>
          <% end %> 
          <% end %>
        </div>
        <div class="fc-item-btn2"><%= link_to search_candidate_path(@offre.id) do %> Cette sélection est celle que nous vous recommandons d’après notre algorithme. <br> Si vous voulez en voir plus, <span>cliquez ici</span></div>
        <% end %> 
        <% end %>
      </div>
    </div>
  </div>
</div>
